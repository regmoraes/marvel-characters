<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.CharacterDetail" parent="AppTheme" />

    <style name="AppTheme.CharacterDetail.ListHeader" parent="AppTheme.CharacterDetail">
        <item name="android:layout_marginTop">@dimen/default_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_vertical_margin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.CharacterDetail.ComicTitle" parent="AppTheme.CharacterDetail">
        <item name="android:layout_marginTop">@dimen/default_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_vertical_margin</item>
        <item name="android:textSize">@dimen/comics_title_size</item>
        <item name="android:gravity">center</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="AppTheme.CharacterDetail.FloatingActionButton" parent="AppTheme.CharacterDetail">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="android:stateListAnimator">@animator/fab_state_list_anim</item>
    </style>

    <style name="AppTheme.Character" parent="AppTheme" />

    <style name="AppTheme.Character.FavoriteIcon" parent="AppTheme.Character">
        <item name="android:src">@drawable/ic_baseline_star_border_24</item>
        <item name="tint">@color/colorPrimaryDark</item>
    </style>


</resources>